<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vhlapp">
    <!-- backendless apis communicate w/ server -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VHLApp">
        <activity
            android:name=".PersonalizedNotification"
            android:label="Personalized Notification"
            android:parentActivityName=".AddActivity" />
        <activity
            android:name=".EventActivity"
            android:label="Event"
            android:parentActivityName=".AddActivity" />
        <activity
            android:name=".AddActivity"
            android:label="Add"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HandbookPDF"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Notifications"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".WebHomepage"
            android:parentActivityName=".MainActivity"
             />
        <activity
            android:name=".Connect"
            android:label="Connect with VHL Alliance"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LaunchLogo"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:label="Welcome"/>
        <activity
            android:name=".SignIn"
            android:label="Welcome"/>
    </application>

</manifest>


